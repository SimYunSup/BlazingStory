    <Story Name="Nullable - No Value">
        <Template>
            <NumberParameterController Key="key"
                                       Parameter="NullableInt32"
                                       Value="_V1"
                                       OnInput="arg => _V1 = arg.Value">
            </NumberParameterController>
        </Template>
    </Story>

    <Story Name="Nullable - Initial Value">
        <Template>
            <NumberParameterController Key="key"
                                       Parameter="NullableInt32"
                                       Value="_V2"
                                       OnInput="arg => _V2 = arg.Value">
            </NumberParameterController>
        </Template>
    </Story>

    <Story Name="Nullable - Null Value">
        <Template>
            <NumberParameterController Key="key"
                                       Parameter="NullableInt32"
                                       Value="_V3"
                                       OnInput="arg => _V3 = arg.Value">
            </NumberParameterController>
        </Template>
    </Story>

    <Story Name="Non Nullable - No Value">
        <Template>
            <NumberParameterController Key="key"
                                       Parameter="Int32"
                                       Value="_V1"
                                       OnInput="arg => _V1 = arg.Value">
            </NumberParameterController>
        </Template>
    </Story>

    <Story Name="Non Nullable - Initial Value">
        <Template>
            <NumberParameterController Key="key"
                                       Parameter="Int32"
                                       Value="_V2"
                                       OnInput="arg => _V2 = arg.Value">
            </NumberParameterController>
        </Template>
    </Story>

    <Story Name="Non Nullable - Null Value">
        <Template>
            <NumberParameterController Key="key"
                                       Parameter="Int32"
                                       Value="_V3"
                                       OnInput="arg => _V3 = arg.Value">
            </NumberParameterController>
        </Template>
    </Story>
</Stories>

@code
{
    private readonly ComponentParameter Int32 = SampleComponent.CreateParameter(nameof(SampleComponent.Int32));
    
    private readonly ComponentParameter NullableInt32 = SampleComponent.CreateParameter(nameof(SampleComponent.NullableInt32));

    private object? _V1 = null;

    private object? _V2 = 123;

    private object? _V3 = null;
