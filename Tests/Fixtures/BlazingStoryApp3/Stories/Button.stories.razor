@attribute [Stories("Components/Button")]

<Stories TComponent="Button">

    <ArgType For="_ => _!.Color" Control="ControlType.Color" />

    <Story Name="Default">

        <Arguments>
            <Arg For="_ => _!.Text" Value='"Default"' />
        </Arguments>

        <Template>
            <Button @attributes="context.Args">
            </Button>
        </Template>
    </Story>

    <Story Name="Counter">
        <Template>
            <Button OnClick="OnClickButton" Text="@($"Click me: {this._count}")" @attributes="context.Args">
            </Button>
        </Template>
    </Story>

</Stories>

@code
{
    private int _count = 0;

    private void OnClickButton()
    {
        _count++;
    }
}