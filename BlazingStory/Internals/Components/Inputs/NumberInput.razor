<input class="number-input" type="number" value="@this.Value" placeholder="@this.PlaceHolder" @oninput="@((arg) => this.OnInput.InvokeAsync(arg))" required />

@code
{
    [Parameter]
    public int Value { get; set; }

    [Parameter]
    public string? PlaceHolder { get; set; }

    [Parameter]
    public EventCallback<ChangeEventArgs> OnInput { get; set; }

}