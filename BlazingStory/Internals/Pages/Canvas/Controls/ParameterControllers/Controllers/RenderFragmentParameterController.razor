@using System.Linq.Expressions
@using Microsoft.AspNetCore.Components.Rendering
@inherits ParameterControllerBase

<TextArea PlaceHolder="Edit string..." Value="@StringValue" OnInput="@((args) => OnInputAsync(args.Value))" />

@code
{
    private string? StringValue => RenderFragmentKit.TryToString(this.Value, out var str) ? str : this.Value?.ToString();
}
